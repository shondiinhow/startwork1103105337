@model List<YW.Models.StationData>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Search = ViewBag.Search;
    var Station = Model;
}

<!DOCTYPE html>

<html>
<body>
    <form class="form-inline" method="post" action="~/Station/Index">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="名稱"
                   name="search" id="search" value="@ViewBag.Search" />
            <button type="submit"class="btn btn-default">搜尋</button>
        </div>
    </form>
    <hr />
    <div class="list-group">
        <a href="#" class="list-group-item active">
            Stations
        </a>
        @for(int i = 0; i < Model.Count; i++)
        {
            <a class="list-group-item">
                <h4 class="list-group-item-heading">@Model[i].Site</h4>
                <p class="list-group-item-text">@Model[i].Address</p>
                <p class="list-group-item-text">@Model[i].Phonenumber</p>
            </a>
        }
    </div>
</body>
</html>
